<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.goldenthread.infopetapp">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_INTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.WRITE_CALENDAR"/>

    <application
        android:allowBackup="true"
        android:name=".App"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ui.altaMascota.AltaMascotaNombreActivity"
            android:label="@string/app_name"
            android:launchMode="singleTop">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <activity
            android:name=".ui.altaMascota.AltaMascotaTipoActivity"
            android:parentActivityName=".ui.altaMascota.AltaMascotaNombreActivity"
            >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.altaMascota.AltaMascotaNombreActivity"/>
        </activity>

        <activity
            android:name=".ui.altaMascota.AltaMascotaGeneroActivity"
            android:parentActivityName=".ui.altaMascota.AltaMascotaTipoActivity"
            >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.altaMascota.AltaMascotaTipoActivity"/>
        </activity>

        <activity
            android:name=".ui.altaMascota.AltaMascotaFotoPerfilActivity"
            android:parentActivityName=".ui.altaMascota.AltaMascotaGeneroActivity"
            >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.altaMascota.AltaMascotaGeneroActivity"/>
        </activity>

        <activity
            android:name=".ui.menuPrincipal.MenuPrincipalActivity"
            android:parentActivityName=".ui.altaMascota.AltaMascotaFotoPerfilActivity"
            >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.altaMascota.AltaMascotaFotoPerfilActivity"/>
        </activity>

    </application>

</manifest>
